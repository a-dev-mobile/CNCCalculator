<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/formula_find_v"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/NameFormulaText"


                android:text="Скорость резания\n(V)" />


            <Button
                android:id="@+id/btnFindVClickV"
                style="@style/InputFormulaButton"
                android:onClick="clickBtnFormulaV"
                android:text="100"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/NameFormulaText"
                android:text="Диаметр\n(∅)" />

            <Button
                android:id="@+id/btnFindVClickD"
                style="@style/InputFormulaButton"
                android:onClick="clickBtnFormulaV"
                android:text="50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/NameFormulaText"
                android:text="Обороты\n(n)"

                />

            <Button
                android:id="@+id/btnFindVClickN"

                style="@style/InputFormulaButton"
                android:onClick="clickBtnFormulaV"
                android:text="637" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>